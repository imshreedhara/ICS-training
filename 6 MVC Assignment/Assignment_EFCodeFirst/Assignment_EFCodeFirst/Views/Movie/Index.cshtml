@model IEnumerable<Assignment_EFCodeFirst.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using(Html.BeginForm("SearchMovieByYear", "Movie",FormMethod.Get))
{
                <p>
                    @Html.TextBox("find",ViewBag.FilterValue as string)
                    <input type="submit" value="Find Movies"/>
                </p>
            }

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Movie_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfRelease)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Movie_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfRelease)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Mid }) |
            @Html.ActionLink("Details", "Details", new { id=item.Mid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Mid })
        </td>
    </tr>
}

</table>
